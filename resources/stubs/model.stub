     */
    public function scopeSearch($query, ?string $term)
    {
        $term = trim((string) $term);
        if ($term === '') {
            return $query;
        }
        $like = '%' . str_replace(['%','_'], ['\\%','\\_'], $term) . '%';
        // Adjust searchable columns after generation if necessary
        $columns = array_filter([
